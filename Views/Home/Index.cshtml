        crossorigin="anonymous"></script>

<script>


    $(document).ready(
  function () {

            cargarPersona();
}
);
function cargarPersona() {
        $('#tablaPersona > tbody').empty();

        $.get("https://localhost:44378/Json/ObtenerPersonas",
            function (data, status) {
                $.each(data, function (index, value) {

                    var fila = "<tr><td>" + value.Id + "</td><td>" + value.Nombre + "</td><td>" + + value.Edad + "</td></tr>";

                    $('#tablaPersona').append(fila);

                });

            });
    }

</script>
